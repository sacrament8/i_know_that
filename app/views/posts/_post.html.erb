<%= link_to post_path(post), class: "post_link col-lg-4" do %>
  <div class="post-wrapper">
    <div class="col-12 card mt-3">
      <%= image_tag post.image[:large].url, class: "post-image mt-3 mx-auto" %>
      <div class="card-title mt-2 mx-auto h3"><%= truncate(post.title, length: 15) %></div>
      <div class="card-text mt-2 mx-auto"><%= truncate(post.description, length: 100) %></div>

    </div>
  </div>
<% end %>