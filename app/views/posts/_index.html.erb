<% if posts.present? %>
  <table class="table bg-light table-shadow table-hover">
    <thead>
      <tr class="row">
        <th class="col-3 text-center">質問タイトル</th>
        <th class="col-5 text-center">質問内容</th>
        <th class="col-1 text-center">状態</th>
        <th class="col-3 text-center">投稿日</th>
      </tr>
    </thead>
    <tbody>
      <% posts.each do |post| %>
        <tr class="row" onclick='window.location="/posts/<%= "#{post.id}" %>"' role="link">
          <td class="col-3 text-center"><%= truncate(post.title, length: 10) %></td>
          <td class="col-5 text-center"><%= truncate(post.description, length: 18) %></td>
          <td class="col-1 text-center"><%= post.status %></td>
          <td class="col-3 text-center"><%= post.prepare_created_at %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
<% else %>
    <div class="card col-10 offset-1" style="height: 160px;">
      <div class="card-body text-center mt-5">あなたの質問はまだありません</div>
    </div>
<% end %>