<%= form_with(model: [post, comment], local: true, url: post_comments_path(post), class: "col-12") do |f| %>
  <%= render partial: "shared/error_messages", locals: { object: comment } %>

  <div class="field">
    <div class="offset-2 mt-4">コメント欄</div>
    <%= f.text_area :content, class: "comment-form col-8 offset-2" %>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id if current_user %>

  <div class="actions">
    <%= f.submit "回答する", class: "btn btn-primary col-8 offset-2 mt-3" %>
  </div>
<% end %>