<div class="row">
  <div class="h4 text-center col-12 my-4">ひそひそ一覧</div>
  <!--ここにフォロワーがいるならの分岐をかく-->
  <% if followers_and_followings(current_user).present? %>
    <table class="table bg-light table-shadow col-10 offset-1">
      <thead>
        <tr class="row">
          <th class="col-3 text-center">ユーザー名</th>
          <th class="col-3 text-center">ひそひそ</th>
          <th class="col-3 text-center">ひそひそ解除</th>
          <th class="col-3 text-center">未読メッセージ</th>
        </tr>
      </thead>
      <tbody>
        <% followers_and_followings(current_user).each do |user| %>
          <tr class="row">
          <td class="col-3 text-center"><%= user.name %></td>
          <td class="col-3 text-center"><%= link_to "開始する", "#", class: "btn btn-success hisohiso-btn" %></td>
          <td class="col-3 text-center"><%= render partial: "users/follow_form", locals: { user: user } %></td>
          <td class="col-3 text-center">あり/なし</td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="card col-10 offset-1" style="height: 160px;">
      <div class="card-body text-center mt-5">現在はひそひそしていません</div>
    </div>
  <% end %>
</div>